@{
    ViewData["Title"] = "Edit Movie";
}
@model MovieCollection.Models.Movie
@*This is my razor html page for adding a movie see the form below*@
<br />
<div class="page-header">
    <h1>Add Movie</h1>
</div>
<hr />
<br />
@*If you want to see the model controlling the validation you just need to change the form tag property validate to novalidate*@
<form class="needs-validation" validate method="post" asp-controller="Home" asp-action="EditMovie">
    <div class="row">
        <div class="col-md-4">
            <label class="form-label" asp-for="category">Category</label>
            <input type="text" class="form-control" required asp-for="category">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-md-6">
            <label class="form-label" asp-for="title">Title</label>
            <input type="text" class="form-control" required asp-for="title">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label class="form-label" asp-for="year">Year</label>
            <input type="number" class="form-control" id="year" required asp-for="year">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-md-5">
            <label class="form-label" asp-for="director">Director</label>
            <input type="text" class="form-control" id="director" required asp-for="director">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-3">
            <select class="form-select align-middle" required asp-for="rating">
                <option selected disabled value="">Choose Rating</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div class="col-md-3">
            <div class="form-check">
                <select asp-for="edited">
                    <option value="false" selected disabled>Is this movie Edited?</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <label for="validationCustom02" class="form-label" asp-for="lentTo">Lent To</label>
            <input type="text" class="form-control" asp-for="lentTo">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <label for="exampleFormControlTextarea1" asp-for="notes">Notes</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" maxlength="25" asp-for="notes"></textarea>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-4">
            <input type="hidden" asp-for="MovieId" value="@Model.MovieId" />
            <button class="btn btn-primary" type="submit">Edit @Model.title</button>
        </div>
    </div>
    <br />
    <div asp-validation-summary="All"></div>
</form>
<br />
<br />